<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_fill"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <com.eyunhome.appframe.widget.CustomeRecordVideoView
            android:id="@+id/record_video_cv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <RelativeLayout
            android:id="@+id/bottom_op_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_63_dip"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_5_dip"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/start_record_iv"
                android:layout_width="@dimen/dimen_63_dip"
                android:layout_height="@dimen/dimen_63_dip"
                android:gravity="center"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/stop_record_iv"
                android:layout_width="@dimen/dimen_63_dip"
                android:layout_height="@dimen/dimen_63_dip"
                android:gravity="center"
                android:visibility="invisible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/time_limit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c0470b"
            android:textSize="@dimen/dimen_12_dip"
            android:layout_above="@id/bottom_op_rl"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>

</LinearLayout>