<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="vertical"
    style="@style/fill_fill"
    >
    <com.eyunhome.appframe.widget.TopbarView
        style="@style/fill_wrap"
        android:id="@+id/top_bar_view"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_10_dip"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:id="@+id/file_path_tv"
                android:layout_weight="1"
                android:hint="请选择要压缩的视频文件"
                android:layout_height="wrap_content" />
            <Button
                android:text="选择文件路径"
                android:id= "@+id/select_file_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:text="压缩视频"
            android:id= "@+id/compress_video_bt"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_45_dip" />
    </LinearLayout>
</LinearLayout>
