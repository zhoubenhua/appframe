<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="vertical"
    style="@style/fill_fill"
    >
    <com.eyunhome.appframe.widget.TopbarView
        style="@style/fill_wrap"
        android:id="@+id/top_bar_view"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_10_dip"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="fill_parent"
                android:id="@+id/add_user_name_et"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入添加用户名"
                android:layout_height="@dimen/dimen_40_dip" />
            <Button
                android:text="保存"
                android:id= "@+id/save_user_bt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40_dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_5_dip"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="fill_parent"
                android:id="@+id/delete_user_name_et"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入要删除的用户名"
                android:layout_height="@dimen/dimen_40_dip" />
            <Button
                android:text="删除"
                android:id= "@+id/delete_user_bt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40_dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_5_dip"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:id="@+id/query_result_tv"
                android:layout_weight="1"
                android:background="@null"
                android:hint="查询结果"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
